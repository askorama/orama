{
  "name": "@orama/plugin-astro",
  "description": "An Astro integration for Orama",
  "version": "0.1.0",
  "keywords": [
    "astro",
    "astro-component",
    "cms",
    "orama",
    "search"
  ],
  "repository": "https://github.com/oramasearch/irama",
  "author": {
    "name": "Andres Correa Casablanca",
    "email": "andres.casablanca@nearform.com",
    "url": "https://blog.coderspirit.xyz"
  },
  "license": "Apache-2.0",
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "swc --delete-dir-on-start -s -w --extensions .ts -d dist src",
    "prebuild": "npm run lint",
    "build": "swc --delete-dir-on-start --extensions .ts -d dist src",
    "postbuild": "tsc -p . --emitDeclarationOnly",
    "test": "node --loader=tsx --no-warnings=loader --test ./test/integration.ts | tap-mocha-reporter spec",
    "posttest": "rm -f test/sandbox/src/env.d.ts",
    "prepare": "husky install && npm run build",
    "prepublishOnly": "npm run lint && npm run test"
  },
  "dependencies": {
    "@orama/orama": "workspace:*",
    "html-to-text": "^9.0.3",
    "husky": "^8.0.3"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.59",
    "@swc/core": "^1.3.27",
    "@types/html-to-text": "^9.0.0",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.48.2",
    "astro": "^2.0.4",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-standard-with-typescript": "^31.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "tap-mocha-reporter": "^5.0.3",
    "tsx": "^3.12.2",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "astro": "^2.0.4"
  }
}
