{
  "name": "@orama/orama",
  "version": "2.0.0-beta.9",
  "type": "module",
  "description": "Next generation full-text and vector search engine, written in TypeScript",
  "sideEffects": false,
  "main": "./dist/cjs/index.cjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/cjs/index.cjs"
    },
    "./internals": {
      "types": "./dist/internals.d.ts",
      "import": "./dist/internals.js",
      "require": "./dist/cjs/internals.cjs"
    },
    "./components": {
      "types": "./dist/components.d.ts",
      "import": "./dist/components.js",
      "require": "./dist/cjs/components.cjs"
    },
    "./trees": {
      "types": "./dist/trees.d.ts",
      "import": "./dist/trees.js",
      "require": "./dist/cjs/trees.cjs"
    }
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/oramasearch/orama"
  },
  "bugs": {
    "url": "https://github.com/oramasearch/orama"
  },
  "scripts": {
    "predev": "rm -rf dist && mkdir dist",
    "dev": "swc -s -w --extensions .ts,.cts -d dist src",
    "prebuild": "npm run lint",
    "build": "node scripts/build.js",
    "lint": "eslint src tests --ext .js,.ts,.cts",
    "test": "c8 -c tests/config/c8-local.json tap --rcfile=tests/config/tap.yml tests/*.test.ts",
    "test:ci": "c8 -c tests/config/c8-ci.json tap --rcfile=tests/config/tap.yml --no-color tests/*.test.ts",
    "test:smoke": "tap --rcfile=tests/config/tap.yml tests/smoke/*.test.ts",
    "test:types": "tsc --emitDeclarationOnly; tsd --files tests/type/",
    "ci": "npm run build && npm run test:ci && npm run test:types"
  },
  "keywords": [
    "full-text search",
    "vector search",
    "vector database",
    "vectors",
    "search",
    "fuzzy search",
    "typo-tolerant search",
    "full-text"
  ],
  "author": {
    "name": "Michele Riva",
    "email": "michele.riva@oramasearch.com",
    "url": "https://github.com/MicheleRiva",
    "author": true
  },
  "contributors": [
    {
      "name": "Tommaso Allevi",
      "email": "tommaso.allevi@oramasearch.com",
      "url": "https://github.com/allevo"
    },
    {
      "name": "Paolo Insogna",
      "email": "paolo.insogna@oramasearch.com",
      "url": "http://cowtech.it",
      "author": true
    }
  ],
  "license": "Apache-2.0",
  "devDependencies": {
    "@orama/stemmers": "workspace:*",
    "@orama/stopwords": "workspace:*",
    "@playwright/test": "^1.40.1",
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.100",
    "@types/node": "^18.19.3",
    "@types/tap": "^15.0.11",
    "auto-changelog": "^2.4.0",
    "c8": "^7.14.0",
    "commitizen": "^4.3.0",
    "cronometro": "^1.2.0",
    "execa": "^6.1.0",
    "glob": "^9.3.5",
    "prettier": "^2.8.8",
    "tap": "^16.3.9",
    "tap-mocha-reporter": "^5.0.4",
    "tape": "^5.7.2",
    "tcompare": "^6.4.5",
    "tsd": "^0.29.0",
    "tsx": "^3.14.0",
    "typescript": "^5.3.3",
    "vite": "^4.5.1"
  },
  "engines": {
    "node": ">= 16.0.0"
  }
}